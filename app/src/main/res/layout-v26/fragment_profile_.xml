<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/textfield_border"
    tools:context=".Profile_Fragment">

    <com.google.android.gms.plus.PlusOneButton xmlns:plus="http://schemas.android.com/apk/lib/com.google.android.gms.plus"
        android:id="@+id/plus_one_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        plus:annotation="inline"
        android:background="@drawable/textfield_border"
        plus:size="standard" />
    <LinearLayout
        android:layout_marginTop="120dp"
        android:layout_width="390dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="150dp"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/fragment_dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:layout_marginHorizontal="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="245dp"
            android:layout_gravity="center"
            android:layout_height="130dp"
            android:orientation="vertical">

            <TextView
                android:text="Name comes here"
                android:id="@+id/fragment_userName"
                android:layout_width="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/fragment_dob"
                android:text="Date Of Birth"
                android:layout_margin="2.5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>     

            <TextView
                android:id="@+id/fragment_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:text="Work Comes Here"/>
            
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
