<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Login">

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="700dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="40dp"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:background="@drawable/border_shape"
        android:id="@+id/display_picture"
        android:layout_gravity="start"
        android:layout_width="160dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"></ImageView>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/display_picture"
            android:layout_margin="10dp"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:layout_alignEnd="@id/display_picture"
            android:layout_alignRight="@id/display_picture"></ImageView>

    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="5dp">
        <EditText
            android:id="@+id/display_name"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:background="@drawable/textfield_border"
            android:hint="First Name"
            android:layout_width="170dp"
            android:layout_gravity="end"
            android:paddingLeft="20dp"
            android:layout_height="45dp"
            android:layout_marginVertical="15dp"
            android:gravity="center" />
    <TextView
        android:id="@+id/dob_btn"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:layout_height="45dp"
        android:text="Date Of Birth"
        android:layout_width="170dp"
        android:gravity="center"
        android:background="@drawable/textfield_border"
        />

</LinearLayout>

</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">


            <EditText
            android:id="@+id/phn_no"
            android:drawableLeft="@drawable/ic_local_phone_black_24dp"
            android:background="@drawable/textfield_border"
            android:hint="Phone Number"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_height="45dp"
            android:layout_marginVertical="10dp"
            android:gravity="center" />
        <EditText
            android:id="@+id/register_username"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:background="@drawable/textfield_border"
            android:hint="Email ID"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:layout_height="45dp"
            android:layout_marginVertical="10dp"
            android:gravity="center" />

        <EditText
            android:id="@+id/password"
            android:layout_marginVertical="10dp"
            android:paddingLeft="20dp"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:background="@drawable/textfield_border"
            android:hint="Set Password"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="45dp"
            android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have an account? "/>

            <TextView
                android:id="@+id/login_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Here"
                style="@style/TextAppearance.AppCompat.Body2"/>

        </LinearLayout>
        <Button
            android:id="@+id/register_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Register"
            android:layout_margin="20dp"
            android:background="@drawable/border_shape"
            android:layout_gravity="center"

            />
<LinearLayout
    android:layout_width="320dp"
    android:layout_height="60dp"
    android:orientation="horizontal">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

</LinearLayout>
    </LinearLayout>
</RelativeLayout>

